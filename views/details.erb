<h4>Post details:</h4>
<p>

   
      <br/>
      <%= @row['name']%>
      <br/>
      <br/>
      <%= @row['content'] %> 
      <br />
      <br />
      <span style="font-size: 75%; color: #999">Added at <%= @row['created_date'] %></span>

</p>

<br />
<h4>Comments:</h4>
<br />
<% @comments.each do |comment|%>

  <p>
  	<%= comment['content'] %>
  	<br />
  	<br />
  	<span style="font-size: 75%; color: #999">Added at <%= comment['created_date'] %></span>
  </p>
  <hr />

<% end %>

<p>
   <form action="/details/<%= @row['id'] %> " method="POST" role="form">
     <textarea name="cont" class="form-control" rows="6" placeholder="Type comment text here" required="" style="width: 500px"></textarea>
     <br/>
     <button type="submit" class="btn btn-info">Add comment</button>
   </form>
</p>
