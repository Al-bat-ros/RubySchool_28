<h4>Post details:</h4>
<p>

   
      <br/>
      <%= @row['name']%>
      <br/>
      <br/>
      <%= @row['content'] %> 
      <br />
      <br />
      <span style="font-size: 75%; color: #999">Added at <%= @row['created_date'] %></span>

</p>

<br />
<h4>Comments:</h4>
<br />
<% @comments.each do |comment|%>

  <p>
    <%= comment['name']%>
    <br />
    <br />
  	<%= comment['content'] %>
  	<br />
  	<br />
  	<span style="font-size: 75%; color: #999">Added at <%= comment['created_date'] %></span>
  </p>
  <hr />

<% end %>

<p>

  <div class="col-md-5">

   <form action="/details/<%= @row['id'] %> " method="POST" role="form">
     <br style="clear:both">
     <h3 style="margin-bottom: 25px; text-align: center;">Add comment for post</h3>

     <div class="form-group">
         <input id="name" class="form-control" name="name" placeholder="Name" required="" type="text">
     </div>

     <div class="form-group">
         <textarea name="cont" class="form-control" rows="7" placeholder="Message" required="" ></textarea>
     </div>


     <button type="submit" class="btn btn-info">Add comment</button>
   </form>

  </div>

</p>
